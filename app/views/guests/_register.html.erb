<div class="text-center">
  <h3><%= t '.title' %></h3>
  <p class="subtitle"><%= t '.subtitle' %></p>
</div>


<form ng-controller="GuestSignupController"
      ng-submit="submit($event)"
      name="signupForm" >
  <ul class="errors">
    <li ng-repeat="error in errors">{{ error }}</li>
  </ul>
  <div class="form-group">
    <label for="fullName"><%= t 'users.new.labels.full_name' %></label>
    <input type="text" class="form-control"
           id="fullName" placeholder="<%= t 'users.new.placeholders.full_name' %>"
           ng-model="form.fullName"
           required>
  </div>

  <div class="form-group">
    <label for="fullName"><%= t 'users.new.labels.email' %></label>
    <input type="email" class="form-control"
           id="email" placeholder="<%= t 'users.new.placeholders.email' %>"
           ng-model="form.email"
           required>
  </div>

  <div class="form-group" ng-class="">
    <label for="emailConfirmation"><%= t 'users.new.labels.phone' %></label>
    <input type="text" class="form-control"
           id="emailConfirmation" placeholder="<%= t 'users.new.placeholders.phone' %>"
           ng-model="form.phone"
           is-phone
           required>
  </div>

  <div class="form-group">
    <label for="password"><%= t 'users.new.labels.password' %></label>
    <input type="password" class="form-control"
           id="password" placeholder="<%= t 'users.new.placeholders.password' %>"
           ng-model="form.password"
           required>
  </div>

  <div class="form-group">
    <label for="passwordConfirmation"><%= t 'users.new.labels.password_confirmation' %></label>
    <input type="password" class="form-control"
           id="passwordConfirmation" placeholder="<%= t 'users.new.placeholders.password_confirmation' %>"
           ng-model="form.passwordConfirmation"
           required
           compare-to="form.password">
  </div>

  <div class="form-group">
    <div class="checkbox checkbox-inline">
      <label>
        <input type="checkbox" ng-model="form.agreedToTermsAt" required>
        <%= "#{t('shared.agreed_to_terms_at')} <a href='https://www.zikaronbasalon.com/terms' target='_blank'>#{t('shared.terms_of_service')}</a>".html_safe %>
      </label>
    </div>
  </div>

  <input type="submit" class="btn btn-warning form-control" value="<%= t 'shared.continue' %>">

  <p class="text-center margin-top-10">
    <span><%= t 'users.new.already_a_member' %></span>
    <a ng-click="toggleView('login')"><%= t 'users.new.sign_in_to_system' %></a>
  </p>
</form>




