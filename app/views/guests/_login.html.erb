<div ng-controller="GuestSigninController" class="margin-bottom-20">
  <div class="text-center title-container">
    <h3><%= t '.title' %></h3>
  </div>

  <form ng-submit="submit($event)" name="signinForm">
  	<p class="has-error" ng-show="error">
  		<%= t '.signin_error' %>
  	</p>	
    <div class="form-group">
      <label for="fullName"><%= t 'users.new.labels.email' %></label>
      <input type="email" class="form-control"
             id="email" placeholder="<%= t 'users.new.placeholders.email' %>"
             ng-model="form.email"
             required>
    </div>

    <div class="form-group">
      <label for="password"><%= t 'users.new.labels.password' %></label>
      <input type="password" class="form-control"
             id="password" placeholder="<%= t 'users.new.placeholders.password' %>"
             ng-model="form.password"
             required>
    </div>
    <input type="submit" class="btn btn-warning form-control" value="<%= t 'shared.continue' %>">
  </form>
</div>
