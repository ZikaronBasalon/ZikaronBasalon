<div id="signup-container" ng-controller="UpdatePasswordController"
                           ng-init="init(<%= params[:reset_password_token].to_json %>)">
  <div class="text-center title-container">
    <div class="title"><%= t '.title' %></div>
  </div>

  <form ng-submit="submit($event)" name="passwordForm">
    <p class="has-error" ng-show="error">
      <%= t '.reset_password_error' %>
    </p>
    <div class="form-group">
      <label for="password" class="required"><%= t 'users.new.labels.password' %></label>
      <input type="password" class="form-control"
             id="password" placeholder="<%= t 'users.new.placeholders.password' %>"
             ng-model="form.password"
             required>
    </div>

    <div class="form-group">
      <label for="password_confirmation" class="required"><%= t 'users.new.labels.password_confirmation' %></label>
      <input type="password" class="form-control"
             id="password_confirmation" placeholder="<%= t 'users.new.placeholders.password_confirmation' %>"
             ng-model="form.password_confirmation"
             required>
    </div>
    <input type="submit" class="btn btn-warning form-control" value="<%= t 'shared.reset_password' %>">
  </form>
</div>
